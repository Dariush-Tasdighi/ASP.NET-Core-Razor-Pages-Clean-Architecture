@page "/index/{culture?}/"

@model Server.Pages.IndexModel

@{
	var applicationSetting =
		Model.LocalizedApplicationSetting;

	if (applicationSetting is not null)
	{
		ViewData[Constants.ViewDataKeyName.PageTitle] = applicationSetting.HomePageTitle;
		ViewData[Constants.ViewDataKeyName.PageAuthor] = applicationSetting.HomePageAuthor;
		ViewData[Constants.ViewDataKeyName.PageImageUrl] = applicationSetting.HomePageImageUrl;
		ViewData[Constants.ViewDataKeyName.PageDescription] = applicationSetting.HomePageDescription;
	}

	Layout =
		"Layouts/_HomePage";
}

