@page "/profile/{culture?}/{username?}"

@model Server.Pages.Features.Identity.ProfileModel

@{
	var fullName =
		$"{Model.ViewModel.FirstName} {Model.ViewModel.LastName}".Trim();

	ViewData[Constants.ViewDataKeyName.PageTitle] = fullName;
}

<section-form>
	<fieldset>
		<section-form-header>
			@(fullName)
		</section-form-header>

		<partial name="PartialViews/_DisplayPageMessages" />

		<dtat-readonly-input asp-for="ViewModel.FirstName" />

		<dtat-readonly-input asp-for="ViewModel.LastName" />

		<dtat-readonly-input asp-for="ViewModel.CellPhoneNumber" dir="ltr" />

		<dtat-readonly-input asp-for="ViewModel.EmailAddress" dir="ltr" />

		<dtat-readonly-input asp-for="ViewModel.Hits" dir="ltr" />

		<hr />

		@(Html.Raw(Model.ViewModel.Description))
	</fieldset>
</section-form>
